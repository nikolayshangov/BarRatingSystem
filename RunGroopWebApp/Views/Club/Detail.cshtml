@model Club


@{
    ViewData["Title"] = "Bar Details";
}


<div class="container">


    <h1 class="my-4">
        Bar Details
        <small></small>
    </h1>

  
    <div class="row">

        <div class="col-md-3">
            <img class="img-fluid" src="@Model.Image" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">@Model.Title</h3>
            <p>@Model.Description</p>
            <h3 class="my-3">Location, Rating and Type</h3>
            <ul>
                <li>@Model.Address.City</li>
                <li>@Model.Address.State</li>
                <li>@Model.ClubCategory</li>
            </ul>
        </div>
    </div>
</div>
